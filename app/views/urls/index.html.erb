<div id="url-index-div">
  <h1>URL SHORTENER</h1>

  <div data-controller="url">
    <div id="create-url-form-div" >
      <form data-action="url#submitForm" accept-charset="UTF-8" method="post">
        <input data-url-target="original" type="text" name="url[original]" id="url_original" class="">
        <input type="submit" name="commit" value="Create Url">
      </form>
    </div>

    <div id="url-list-div">
      <% Url.all.each do |url| %>
        <div class="url-div">
          <p data-originalUrl-target=<%= url.original %> class="url-original-divs"><%= url.short_version %><p>
          <div class="button-div">
            <button>Redirect</button> <button>see more</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<%#= form_with model: @url do |form| %>
  <%#= form.text_field :original %>
  <%#= form.submit %>
<%# end %>
</div>

